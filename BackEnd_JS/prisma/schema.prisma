generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id              Int              @id @default(autoincrement())
  email           String           @unique
  passwordHash    String           @map("password_hash")
  fullName        String?          @map("full_name")
  phone           String?
  isVerified      Boolean          @default(false) @map("is_verified")
  isActive        Boolean          @default(true) @map("is_active")
  lastLogin       DateTime?        @map("last_login")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  favorites       Favorite[]
  priceAlerts     PriceAlert[]
  searchHistory   SearchHistory[]
  userPreferences UserPreferences?

  @@map("users")
}

model Category {
  id            Int             @id @default(autoincrement())
  name          String
  slug          String          @unique
  parentId      Int?            @map("parent_id")
  level         Int             @default(0)
  keywords      String[]
  description   String?
  icon          String?
  priority      Int             @default(0)
  isActive      Boolean         @default(true) @map("is_active")
  createdAt     DateTime        @default(now()) @map("created_at")
  updatedAt     DateTime        @updatedAt @map("updated_at")
  products      Product[]
  searchHistory SearchHistory[]
  searchTerms   SearchTerm[]

  @@map("categories")
}

model Product {
  id              Int             @id @default(autoincrement())
  name            String
  slug            String          @unique
  categoryId      Int?            @map("category_id")
  brand           String?
  description     String?
  price           Decimal         @db.Decimal(12, 2)
  originalPrice   Decimal?        @map("original_price") @db.Decimal(12, 2)
  discountPercent Int             @default(0) @map("discount_percent")
  stock           Int             @default(0)
  sku             String?         @unique
  attributes      Json            @default("{}")
  images          String[]
  viewCount       Int             @default(0) @map("view_count")
  saleCount       Int             @default(0) @map("sale_count")
  ratingAvg       Decimal         @default(0) @map("rating_avg") @db.Decimal(3, 2)
  ratingCount     Int             @default(0) @map("rating_count")
  popularityScore Int             @default(0) @map("popularity_score")
  isActive        Boolean         @default(true) @map("is_active")
  isFeatured      Boolean         @default(false) @map("is_featured")
  createdAt       DateTime        @default(now()) @map("created_at")
  updatedAt       DateTime        @updatedAt @map("updated_at")
  favorites       Favorite[]
  priceAlerts     PriceAlert[]
  priceHistory    PriceHistory[]
  category        Category?       @relation(fields: [categoryId], references: [id])
  searchHistory   SearchHistory[]

  @@map("products")
}

model SearchTerm {
  id             Int       @id @default(autoincrement())
  term           String    @unique
  normalizedTerm String    @map("normalized_term")
  categoryId     Int?      @map("category_id")
  productIds     Int[]
  searchCount    Int       @default(0) @map("search_count")
  resultCount    Int       @default(0) @map("result_count")
  conversionRate Decimal   @default(0) @map("conversion_rate") @db.Decimal(5, 2)
  lastSearched   DateTime? @map("last_searched")
  createdAt      DateTime  @default(now()) @map("created_at")
  category       Category? @relation(fields: [categoryId], references: [id])

  @@map("search_terms")
}

model SearchHistory {
  id               Int       @id @default(autoincrement())
  userId           Int?      @map("user_id")
  query            String
  categoryId       Int?      @map("category_id")
  resultCount      Int       @default(0) @map("result_count")
  clickedProductId Int?      @map("clicked_product_id")
  searchedAt       DateTime  @default(now()) @map("searched_at")
  sessionId        String?   @map("session_id")
  category         Category? @relation(fields: [categoryId], references: [id])
  product          Product?  @relation(fields: [clickedProductId], references: [id])
  user             User?     @relation(fields: [userId], references: [id])

  @@map("search_history")
}

model UserPreferences {
  id                  Int      @id @default(autoincrement())
  userId              Int      @unique @map("user_id")
  preferredCategories Int[]
  preferredBrands     String[]
  priceRangeMin       Decimal? @map("price_range_min") @db.Decimal(12, 2)
  priceRangeMax       Decimal? @map("price_range_max") @db.Decimal(12, 2)
  notificationEnabled Boolean  @default(true) @map("notification_enabled")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")
  user                User     @relation(fields: [userId], references: [id])

  @@map("user_preferences")
}

model Favorite {
  id        Int      @id @default(autoincrement())
  userId    Int      @map("user_id")
  productId Int      @map("product_id")
  addedAt   DateTime @default(now()) @map("added_at")
  product   Product  @relation(fields: [productId], references: [id])
  user      User     @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
  @@map("favorites")
}

model PriceAlert {
  id          Int       @id @default(autoincrement())
  userId      Int       @map("user_id")
  productId   Int       @map("product_id")
  targetPrice Decimal   @map("target_price") @db.Decimal(12, 2)
  isActive    Boolean   @default(true) @map("is_active")
  createdAt   DateTime  @default(now()) @map("created_at")
  triggeredAt DateTime? @map("triggered_at")
  product     Product   @relation(fields: [productId], references: [id])
  user        User      @relation(fields: [userId], references: [id])

  @@unique([userId, productId])
  @@map("price_alerts")
}

model PriceHistory {
  id         Int      @id @default(autoincrement())
  productId  Int      @map("product_id")
  price      Decimal  @db.Decimal(12, 2)
  source     String?
  recordedAt DateTime @default(now()) @map("recorded_at")
  product    Product  @relation(fields: [productId], references: [id])

  @@map("price_history")
}
